@model IEnumerable<SampleMVCProject.Models.Fruit>

<div class="container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Create New
    </button>
    <table class="table">
        <tr>
            <th scope="col"> ID</th>
            <th scope="col"> Name</th>
            <th scope="col"> IsNew</th>
            <th scope="col"> PurchaseDate</th>
            <th scope="col"> Image</th>
            <th scope="col"> Season</th>
            <th scope="col"> Action</th>
        </tr>
        @Html.Partial("_ArPartial")

    </table>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Create New</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                <div class="container">

                    <form action="Create" method="post" enctype="multipart/form-data">
                        ID : <input type="text" name="ID" value="" /> <br />
                        Name : <input type="text" name="Name" value="" /> <br />
                        IsNew : <input type="checkbox" name="IsNew" value="true" /> <br />
                        PurchaseDate : <input type="date" name="PurchaseDate" value="" /> <br />
                        Image : <input type="file" name="Image" value="" /> <br />
                        Season : <select name="SeasonID">
                            @foreach (var item in ViewBag.season)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>

                        <br />
                        <br />
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                       
                    </form>
                </div>



            </div>
        </div>
    </div>
</div>